//Dice Range Game
//By Holly Chen on 26/02/2021

#include <stdio.h>
int main(void){
    int a;
    int b;
    printf("Enter the number of sides on your dice: ");
    scanf("%d", &a);
    printf("Enter the number of dice being rolled: ");
    scanf("%d", &b);
    int maxrange=a*b;
    if(maxrange!=0 && maxrange>0){
    printf("Your dice range is %d to %d.\n",b,maxrange);
    printf("The average value is %lf.\n", (b+maxrange)/2.0);
    } else {
    printf("These dice will not produce a range.\n");
    }
    return 0;
}
